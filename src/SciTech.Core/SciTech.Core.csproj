<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!--<TargetFrameworks>netcoreapp3.0</TargetFrameworks>-->
    <TargetFrameworks>netstandard2.0;netstandard2.1;net461;net472</TargetFrameworks>
  </PropertyGroup>
  
  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Copyright>Copyright 2019. SciTech Software AB</Copyright>
    <Company>SciTech Software AB</Company>
    <Authors>SciTechSoftware</Authors>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Version>0.6.1-alpha1</Version>
    <Description>Contains utility/helper classes used by the SciTech.Rpc project. This 
package is currently not intended for other use.</Description>
  </PropertyGroup>

  <Import Project="..\Platform.props" />

  <PropertyGroup>
    <CodeAnalysisRuleSet>..\SciTech.Rpc.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <PropertyGroup>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(HasNullableAttributes)' == 'true'">
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup Condition="'$(HasNullableAttributes)' != 'true'">
    <Nullable>annotations</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Diagnostics\ExceptionManager.cs" />
    <Compile Remove="Diagnostics\ILogger.cs" />
    <Compile Remove="Diagnostics\NullLogger.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="Diagnostics\ExceptionManager.cs" />
    <None Include="Diagnostics\ILogger.cs" />
    <None Include="Diagnostics\NullLogger.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="System.Collections.Immutable" Version="1.5.0" />
    <PackageReference Include="System.IO.Pipelines" Version="4.5.3" />
  </ItemGroup>
</Project>
